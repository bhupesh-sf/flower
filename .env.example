# Database
DATABASE_URL="postgresql://user:password@localhost:5432/flower?schema=public"

# API Server
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info
CORS_ORIGIN=http://localhost:3000

# Node Environment
NODE_ENV=development

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OpenRouter AI
OPENROUTER_API_KEY=sk-or-v1-xxx
DEFAULT_AI_MODEL=anthropic/claude-3-sonnet
FALLBACK_MODELS=gpt-4-turbo,llama-3-70b
MAX_TOKENS_PER_REQUEST=4000
AI_BUDGET_PER_USER=10.00

# OAuth Providers (optional for Phase 1)
OAUTH_GITHUB_CLIENT_ID=xxx
OAUTH_GITHUB_CLIENT_SECRET=xxx
OAUTH_GOOGLE_CLIENT_ID=xxx
OAUTH_GOOGLE_CLIENT_SECRET=xxx

# External Integrations (Phase 4)
GITHUB_APP_ID=xxx
GITHUB_PRIVATE_KEY=xxx
JIRA_CLIENT_ID=xxx
JIRA_CLIENT_SECRET=xxx
TRELLO_API_KEY=xxx
TRELLO_API_SECRET=xxx

# Redis (for queues and caching)
REDIS_URL=redis://localhost:6379

# File Storage (Phase 4)
S3_BUCKET=flower-exports
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=xxx
S3_SECRET_ACCESS_KEY=xxx

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000